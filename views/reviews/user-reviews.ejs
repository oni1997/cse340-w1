<%- include('../partials/head') %>
<body>
  <div class="wrapper">
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>
    
    <main>
      <h1>My Reviews</h1>
      
      <% if (messages && messages.length > 0) { %>
        <p class="notice"><%= messages %></p>
      <% } %>
      
      <% if (reviews && reviews.length > 0) { %>
        <div class="reviews-list">
          <% reviews.forEach(review => { %>
            <div class="review-item">
              <div class="review-header">
                <h3><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
                <div class="review-rating">
                  <% for(let i = 1; i <= 5; i++) { %>
                    <span class="star <%= i <= review.review_rating ? 'filled' : '' %>">‚≠ê</span>
                  <% } %>
                  (<%= review.review_rating %>/5)
                </div>
              </div>
              
              <div class="review-content">
                <h4><%= review.review_title %></h4>
                <p><%= review.review_text %></p>
                <small class="review-date">Reviewed on <%= new Date(review.review_date).toLocaleDateString() %></small>
              </div>
              
              <div class="review-actions">
                <a href="/reviews/edit/<%= review.review_id %>" class="btn-edit">Edit</a>
                <a href="/reviews/delete/<%= review.review_id %>" class="btn-delete" onclick="return confirm('Are you sure you want to delete this review?')">Delete</a>
                <a href="/inv/detail/<%= review.inv_id %>" class="btn-view">View Vehicle</a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="no-reviews">
          <p>You haven't written any reviews yet.</p>
          <p><a href="/">Browse vehicles</a> to find one to review!</p>
        </div>
      <% } %>
    </main>
    
    <%- include('../partials/footer') %>
  </div>
  
  <style>
    .reviews-list {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    
    .review-item {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 20px;
      background: #f9f9f9;
    }
    
    .review-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
      border-bottom: 1px solid #eee;
      padding-bottom: 10px;
    }
    
    .review-header h3 {
      margin: 0;
      color: #333;
    }
    
    .review-rating {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .star {
      font-size: 16px;
    }
    
    .star.filled {
      color: #ffd700;
    }
    
    .review-content h4 {
      margin: 0 0 10px 0;
      color: #555;
    }
    
    .review-content p {
      margin: 0 0 10px 0;
      line-height: 1.5;
    }
    
    .review-date {
      color: #888;
      font-style: italic;
    }
    
    .review-actions {
      margin-top: 15px;
      display: flex;
      gap: 10px;
    }
    
    .btn-edit, .btn-delete, .btn-view {
      padding: 8px 16px;
      text-decoration: none;
      border-radius: 4px;
      font-size: 14px;
    }
    
    .btn-edit {
      background: #007bff;
      color: white;
    }
    
    .btn-delete {
      background: #dc3545;
      color: white;
    }
    
    .btn-view {
      background: #28a745;
      color: white;
    }
    
    .btn-edit:hover, .btn-delete:hover, .btn-view:hover {
      opacity: 0.8;
    }
    
    .no-reviews {
      text-align: center;
      padding: 40px;
      background: #f9f9f9;
      border-radius: 8px;
    }
    
    .no-reviews p {
      margin: 10px 0;
      font-size: 18px;
    }
    
    .no-reviews a {
      color: #007bff;
      text-decoration: none;
    }
    
    .no-reviews a:hover {
      text-decoration: underline;
    }
  </style>
</body>
</html>
